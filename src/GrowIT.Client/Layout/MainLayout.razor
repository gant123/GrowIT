@inherits LayoutComponentBase
@inject NavigationManager NavManager
@using GrowIT.Client.Auth
@inject AuthenticationStateProvider AuthStateProvider
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<div class="app-container">
    <div class="sidebar">
        <div class="sidebar-header">
            <span class="oi oi-graph me-2" style="color: #6fba2c;"></span> GrowIT
        </div>
        <div class="sidebar-menu">
            <NavMenu />
        </div>
    </div>

    <div class="main-content">
        <div class="top-bar">
            <AuthorizeView>
                <Authorized>
                    <span class="me-3 text-secondary small">
                        Logged in as <strong>@context.User.Identity?.Name</strong>
                    </span>
                    <button class="btn btn-sm btn-outline-danger" @onclick="Logout">
                        Sign Out
                    </button>
                </Authorized>
                <NotAuthorized>
                    <a href="login" class="btn btn-sm btn-primary">Log In</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <div class="page-content">
            @Body
        </div>
    </div>
</div>

@code {
    private async Task Logout()
    {
        await LocalStorage.RemoveItemAsync("authToken");
        await ((CustomAuthStateProvider)AuthStateProvider).MarkUserAsLoggedOut();
        NavManager.NavigateTo("/login");
    }
}