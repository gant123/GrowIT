@page "/clients/{Id:guid}"
@attribute [Authorize]
@using GrowIT.Shared.DTOs
@using GrowIT.Client.Shared 
@inject HttpClient Http
@inject NavigationManager Nav

@if (client == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-success" role="status"></div>
        <p class="mt-2 text-muted">Loading case file...</p>
    </div>
}
else
{
    <PageHeader Title="@client.FullName" Subtitle="Case File & Household Impact Analysis">
        <Actions>
            <a href="clients" class="btn-growit btn-secondary-growit">
                <span class="oi oi-arrow-left me-1"></span> Back
            </a>
            <button class="btn-growit btn-primary-growit" @onclick="OpenEditClientModal">
                <span class="oi oi-pencil me-2"></span>Edit Profile
            </button>
        </Actions>
    </PageHeader>

    <div class="row g-4">
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm mb-4" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                    <div class="card-header bg-transparent fw-bold py-3" style="border-color: var(--growit-border);">
                        Financial Impact
                    </div>
                    <div class="card-body">
                        <div class="text-center py-4">
                            <div class="display-4 fw-bold text-success mb-1">@client.TotalInvestment.ToString("C0")</div>
                            <div class="small text-muted text-uppercase" style="color: var(--growit-text-muted) !important;">Total Invested Lifetime</div>
                        </div>
                        <hr style="color: var(--growit-border);" />
                        <div class="d-flex justify-content-between py-2">
                            <span class="text-secondary" style="color: var(--growit-text-secondary) !important;">Last Investment</span>
                            <span class="fw-bold">@(client.LastInvestmentDate?.ToString("MMM dd, yyyy") ?? "Never")</span>
                        </div>
                        <div class="d-flex justify-content-between py-2">
                            <span class="text-secondary" style="color: var(--growit-text-secondary) !important;">Seeds Planted</span>
                            <span class="fw-bold">@client.Timeline.Count(t => t.Type == "Investment")</span>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                    <div class="card-header bg-transparent fw-bold py-3 d-flex justify-content-between align-items-center" style="border-color: var(--growit-border);">
                        <span>Household (@client.HouseholdMembers.Count)</span>
                        <button class="btn btn-sm btn-link text-success text-decoration-none fw-bold" @onclick="OpenAddMemberModal">
                            <span class="oi oi-plus me-1"></span>Add
                        </button>
                    </div>
                    <div class="card-body p-0">
                        @if (client.HouseholdMembers.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var member in client.HouseholdMembers)
                                {
                                    <li class="list-group-item px-3 py-3" style="cursor: pointer;" @onclick="() => NavigateToMember(member.Id)">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="rounded-circle d-flex align-items-center justify-content-center border" 
                                                     style="width: 36px; height: 36px; background-color: var(--growit-bg-primary); border-color: var(--growit-border);">
                                                    <span class="oi @GetRelationshipIcon(member.Relationship) small text-secondary" style="color: var(--growit-text-secondary) !important;"></span>
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-sm">@member.Name</div>
                                                    <div class="small text-secondary" style="font-size: 0.8rem; color: var(--growit-text-secondary) !important;">
                                                        @member.Relationship â€¢ @member.Age yrs
                                                    </div>
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(member.School))
                                            {
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary-subtle">
                                                    @member.School
                                                </span>
                                            }
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="text-center py-4 small opacity-50">
                                <span class="oi oi-people d-block mb-2 fs-5"></span>
                                No family members listed.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                    <div class="card-header bg-transparent fw-bold py-3 d-flex justify-content-between align-items-center" style="border-color: var(--growit-border);">
                        <span>Activity Timeline</span>
                        <span class="badge bg-secondary rounded-pill">@client.Timeline.Count Items</span>
                    </div>
                    <div class="card-body p-0">
                        @if (client.Timeline.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var item in client.Timeline)
                                {
                                    <div class="list-group-item p-4 d-flex gap-3" style="background-color: transparent; border-color: var(--growit-border);">
                                        <div class="d-flex flex-column align-items-center" style="min-width: 50px;">
                                            <div class="rounded-circle d-flex align-items-center justify-content-center border" 
                                                 style="width: 40px; height: 40px; border-color: var(--growit-border);">
                                                <span class="oi @item.Icon @item.ColorClass"></span>
                                            </div>
                                            <div class="h-100 border-start mt-2" style="width: 2px; border-color: var(--growit-border); opacity: 0.5;"></div>
                                        </div>

                                        <div class="flex-grow-1 pb-3">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <h6 class="fw-bold mb-1">@item.Title</h6>
                                                <div>
                                                    <small class="text-muted" style="color: var(--growit-text-muted) !important;">@item.Date.ToString("MMM dd, yyyy")</small>
                                                    @if (item.Type == "Investment")
                                                    {
                                                        <button class="btn btn-sm btn-link text-info p-0 ms-2" @onclick="() => OpenReassignModal(item.Id)">
                                                            <span class="oi oi-transfer"></span>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                            <p class="mb-1 text-secondary small" style="color: var(--growit-text-secondary) !important;">@item.Description</p>
                                            
                                            @if (item.Amount.HasValue && item.Amount > 0)
                                            {
                                                <div class="mt-2">
                                                    <span class="badge bg-success bg-opacity-10 text-success fw-bold px-3 py-2 border border-success border-opacity-25">
                                                        @item.Amount.Value.ToString("C2")
                                                    </span>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 opacity-50">
                                <span class="oi oi-pencil fs-1 mb-3 d-block"></span>
                                <p>No history recorded yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <AddFamilyMemberModal @bind-Show="showAddMemberModal" 
                              ClientId="@Id" 
                              DefaultLastName="@(client.LastName)"
                              OnMemberAdded="ReloadProfile" />

        <ReassignInvestmentModal @bind-Show="showReassignModal" 
                                 InvestmentId="selectedInvestmentId"
                                 Members="client.HouseholdMembers"
                                 OnChanged="ReloadProfile" />
}

@code {
    [Parameter] public Guid Id { get; set; }
    private ClientDetailDto? client;
    private bool showAddMemberModal = false;
    private bool showEditClientModal = false;
    private bool showReassignModal = false;
    private Guid selectedInvestmentId;

    protected override async Task OnInitializedAsync()
    {
        await ReloadProfile();
    }

    private async Task ReloadProfile()
    {
        try
        {
            client = await Http.GetFromJsonAsync<ClientDetailDto>($"api/clients/{Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
        }
    }

    private void NavigateToMember(Guid memberId)
    {
        Nav.NavigateTo($"/clients/member/{memberId}");
    }

    private void OpenAddMemberModal() => showAddMemberModal = true;
    
    private void OpenEditClientModal() => showEditClientModal = true;

    private void OpenReassignModal(Guid investmentId)
    {
        selectedInvestmentId = investmentId;
        showReassignModal = true;
    }

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "??";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length == 0) return "??";
        if (parts.Length == 1) return parts[0].Substring(0, 1).ToUpper();
        return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
    }

    private string GetRelationshipIcon(string relationship)
    {
        var rel = relationship?.ToLower() ?? "";
        if (rel.Contains("spouse") || rel.Contains("wife") || rel.Contains("husband")) return "oi-heart text-danger";
        if (rel.Contains("pet") || rel.Contains("dog") || rel.Contains("cat")) return "oi-star text-warning";
        return "oi-person";
    }
}