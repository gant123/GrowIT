@page "/clients/create"
@using GrowIT.Client.Models
@using GrowIT.Shared.DTOs
@using GrowIT.Shared.Enums
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject HttpClient Http
@inject NavigationManager NavManager

<div class="create-client-page">
    <div class="page-header">
        <a href="clients" class="back-link">
            <span>‚Üê</span> Back to Clients
        </a>
        <h1 class="page-title">Add New Client</h1>
        <p class="page-subtitle">Register a new individual or family into the system</p>
    </div>

    <div class="form-card">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                <span>‚ö†Ô∏è</span> @errorMessage
            </div>
        }

        <EditForm Model="@clientRequest" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="form-section">
                <h3 class="section-title">Basic Information</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label>Name / Organization <span class="required">*</span></label>
                        <InputText @bind-Value="clientRequest.Name" class="form-input" placeholder="e.g. John Smith or Smith Family" />
                        <ValidationMessage For="@(() => clientRequest.Name)" />
                    </div>
                </div>

                <div class="form-row two-col">
                    <div class="form-group">
                        <label>Email</label>
                        <InputText @bind-Value="clientRequest.Email" class="form-input" placeholder="john@example.com" />
                        <ValidationMessage For="@(() => clientRequest.Email)" />
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <InputText @bind-Value="clientRequest.Phone" class="form-input" placeholder="(555) 123-4567" />
                        <ValidationMessage For="@(() => clientRequest.Phone)" />
                    </div>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">Assessment</h3>
                
                <div class="form-row two-col">
                    <div class="form-group">
                        <label>Household Size</label>
                        <InputNumber @bind-Value="clientRequest.HouseholdCount" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label>Stability Score (1-10)</label>
                        <div class="score-input-wrapper">
                            <InputNumber @bind-Value="clientRequest.StabilityScore" class="form-input" min="1" max="10" />
                            <div class="score-indicator">
                                <div class="score-bar">
                                    <div class="score-fill" style="width: @(clientRequest.StabilityScore * 10)%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Life Phase</label>
                    <div class="phase-selector">
                        <label class="phase-option @(clientRequest.LifePhase == LifePhase.Crisis ? "selected" : "")">
                            <input type="radio" name="lifePhase" checked="@(clientRequest.LifePhase == LifePhase.Crisis)" @onchange="@(() => clientRequest.LifePhase = LifePhase.Crisis)" />
                            <span class="phase-icon">üî¥</span>
                            <span class="phase-name">Crisis</span>
                            <span class="phase-desc">Immediate assistance needed</span>
                        </label>
                        <label class="phase-option @(clientRequest.LifePhase == LifePhase.Stable ? "selected" : "")">
                            <input type="radio" name="lifePhase" checked="@(clientRequest.LifePhase == LifePhase.Stable)" @onchange="@(() => clientRequest.LifePhase = LifePhase.Stable)" />
                            <span class="phase-icon">üü°</span>
                            <span class="phase-name">Stable</span>
                            <span class="phase-desc">Maintaining current status</span>
                        </label>
                        <label class="phase-option @(clientRequest.LifePhase == LifePhase.Thriving ? "selected" : "")">
                            <input type="radio" name="lifePhase" checked="@(clientRequest.LifePhase == LifePhase.Thriving)" @onchange="@(() => clientRequest.LifePhase = LifePhase.Thriving)" />
                            <span class="phase-icon">üü¢</span>
                            <span class="phase-name">Thriving</span>
                            <span class="phase-desc">Progressing positively</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <a href="clients" class="btn-secondary">Cancel</a>
                <button type="submit" class="btn-primary" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-small"></span>
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>üíæ</span>
                        <span>Save Client</span>
                    }
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private CreateClientRequest clientRequest = new()
    {
        LifePhase = LifePhase.Crisis,
        StabilityScore = 5,
        HouseholdCount = 1
    };
    
    private string? errorMessage;
    private bool isSubmitting = false;

    private async Task HandleSubmit()
    {
        errorMessage = null;
        isSubmitting = true;

        try
        {
            var response = await Http.PostAsJsonAsync("api/Clients", clientRequest);

            if (response.IsSuccessStatusCode)
            {
                NavManager.NavigateTo("/clients");
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error saving client: {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"System Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
