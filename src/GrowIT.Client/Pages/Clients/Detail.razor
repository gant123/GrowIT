@page "/clients/{Id:guid}"
@using GrowIT.Shared.DTOs
@using GrowIT.Shared.Enums
@inject HttpClient Http
@attribute [Authorize]

<div class="container-fluid mt-4">
    @if (client == null)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted">Loading Growth Plan...</p>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0 text-gray-800">@client.FullName</h1>
                <span class="badge @GetPhaseColor(client.LifePhase) fs-6 mt-2">
                    @client.LifePhase
                </span>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary">
                    <span class="oi oi-pencil me-2"></span> Edit Profile
                </button>
                <button class="btn btn-success shadow-sm">
                    <span class="oi oi-plus me-2"></span> New Investment
                </button>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                
                <div class="card shadow mb-4 border-left-primary">
                    <div class="card-body text-center">
                        <h6 class="text-uppercase text-muted fw-bold mb-3">Stability Score</h6>
                        <div class="position-relative d-inline-block">
                            <div style="width: 100px; height: 100px; border-radius: 50%; border: 8px solid #e3e6f0; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                <span class="display-4 fw-bold text-primary">@client.StabilityScore</span>
                            </div>
                        </div>
                        <p class="small text-muted mt-3 mb-0">
                            Based on housing, employment, and health factors.
                        </p>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center">
                        <h6 class="m-0 fw-bold text-primary">Household Profile</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Household Size</span>
                                <span class="fw-bold">@client.HouseholdCount Members</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Employment</span>
                                <span class="fw-bold">@client.EmploymentStatus</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Phone</span>
                                <span>@client.Phone</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between px-0">
                                <span class="text-muted">Email</span>
                                <span>@client.Email</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted fw-bold small">Lifetime Investment</h6>
                        <div class="h2 mb-0 fw-bold text-success">@client.TotalInvestment.ToString("C0")</div>
                        <div class="small text-muted mt-1">
                            Last active: @(client.LastInvestmentDate?.ToShortDateString() ?? "Never")
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 bg-white">
                        <h6 class="m-0 fw-bold text-primary">Growth Timeline</h6>
                    </div>
                    <div class="card-body">
                        @if (client.Timeline.Any())
                        {
                            <div class="timeline">
                                @foreach (var item in client.Timeline)
                                {
                                    <div class="timeline-item pb-4 ps-4 border-start border-2 position-relative">
                                        <div class="position-absolute top-0 start-0 translate-middle bg-white p-1" style="margin-left: -1px;">
                                            <span class="oi @item.Icon @item.ColorClass fs-5"></span>
                                        </div>
                                        
                                        <div class="ps-3">
                                            <div class="d-flex justify-content-between">
                                                <span class="fw-bold text-dark">@item.Title</span>
                                                <small class="text-muted">@item.Date.ToShortDateString()</small>
                                            </div>
                                            <p class="mb-1 text-secondary">@item.Description</p>
                                            
                                            @if (item.Amount.HasValue)
                                            {
                                                <span class="badge bg-light text-dark border">@item.Amount.Value.ToString("C")</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <span class="oi oi-list fs-1 mb-3 d-block opacity-25"></span>
                                No history found. Plant the first seed!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private ClientDetailDto? client;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            client = await Http.GetFromJsonAsync<ClientDetailDto>($"api/clients/{Id}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading client: {ex.Message}");
        }
    }

    private string GetPhaseColor(LifePhase phase) => phase switch
    {
        LifePhase.Crisis => "bg-danger",
        LifePhase.Stable => "bg-warning text-dark",
        LifePhase.Thriving => "bg-success",
        _ => "bg-secondary"
    };
}