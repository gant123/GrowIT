@page "/clients/member/{Id:guid}"
@using GrowIT.Shared.DTOs
@using GrowIT.Client.Shared
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS

@if (profile == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-info" role="status"></div>
        <p class="mt-2 text-muted">Opening individual file...</p>
    </div>
}
else
{
    <div class="container-fluid mt-4">
        <div class="card border-0 shadow-sm mb-4" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-4">
                        <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm" 
                             style="width: 70px; height: 70px; background-color: var(--growit-blue); font-size: 1.5rem;">
                            @profile.Name.Substring(0, 1)
                        </div>
                        <div>
                            <h1 class="h3 mb-1 fw-bold">@profile.Name</h1>
                            <div class="small opacity-75">
                                <span class="badge bg-info bg-opacity-10 text-info border border-info-subtle me-2">@profile.Relationship</span>
                                <span>@profile.Age years old â€¢ @profile.School</span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button class="btn btn-sm btn-outline-warning" @onclick="ToggleEdit">
                            <span class="oi oi-pencil me-1"></span>Edit
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="ConfirmDelete">
                            <span class="oi oi-trash me-1"></span>Delete
                        </button>
                        <button class="btn btn-outline-secondary" @onclick="GoBack">Back to Family</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm mb-4" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                    <div class="card-header bg-transparent fw-bold py-3">Individual Impact</div>
                    <div class="card-body">
                        <div class="text-center py-3">
                            <div class="display-5 fw-bold text-info">@profile.TotalInvested.ToString("C0")</div>
                            <div class="small text-muted text-uppercase">Allocated to @profile.Name</div>
                        </div>
                        <hr style="border-color: var(--growit-border);" />
                        <div class="mb-3">
                            <label class="small fw-bold text-muted text-uppercase d-block mb-1">Confidential Notes</label>
                            <p class="small p-3 rounded" style="background-color: var(--growit-bg-primary);">
                                @(string.IsNullOrEmpty(profile.Notes) ? "No specific notes for this member." : profile.Notes)
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                    <div class="card-header bg-transparent fw-bold py-3">Personal Activity</div>
                    <div class="card-body p-0">
                        @if (profile.Timeline.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var item in profile.Timeline)
                                {
                                    <div class="list-group-item p-4 d-flex gap-3" style="background-color: transparent; border-color: var(--growit-border);">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center border" style="width: 40px; height: 40px; min-width: 40px;">
                                            <span class="oi @item.Icon @item.ColorClass"></span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="fw-bold mb-1">@item.Title</h6>
                                                <div>
                                                    <small class="text-muted">@item.Date.ToShortDateString()</small>
                                                    @if (item.Type == "Investment")
                                                    {
                                                        <button class="btn btn-sm btn-link text-info p-0 ms-2" @onclick="() => OpenReassignModal(item.Id)">
                                                            <span class="oi oi-transfer"></span>
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                            <p class="small mb-2 opacity-75">@item.Description</p>
                                            @if (item.Amount.HasValue)
                                            {
                                                <span class="badge bg-info bg-opacity-10 text-info fw-bold border border-info-subtle">@item.Amount.Value.ToString("C2")</span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <AddFamilyMemberModal @bind-Show="showEditModal" 
                              MemberId="@Id" 
                              OnMemberAdded="LoadProfile" />

        <ReassignInvestmentModal @bind-Show="showReassignModal" 
                                 InvestmentId="selectedInvestmentId"
                                 OnChanged="LoadProfile" />
    </div>
}

@code {
    [Parameter] public Guid Id { get; set; }
    private FamilyMemberProfileDto? profile;
    private bool showEditModal = false;
    private bool showReassignModal = false;
    private Guid selectedInvestmentId;

    protected override async Task OnInitializedAsync() => await LoadProfile();

    private async Task LoadProfile()
    {
        profile = await Http.GetFromJsonAsync<FamilyMemberProfileDto>($"api/clients/members/{Id}");
    }

    private void ToggleEdit() => showEditModal = true;

    private void OpenReassignModal(Guid investmentId)
    {
        selectedInvestmentId = investmentId;
        showReassignModal = true;
    }

    private async Task ConfirmDelete()
    {
        if (await JS.InvokeAsync<bool>("confirm", "Delete this member?"))
        {
            var res = await Http.DeleteAsync($"api/clients/members/{Id}");
            if (res.IsSuccessStatusCode) Nav.NavigateTo("clients");
        }
    }

    private void GoBack() => Nav.NavigateTo("clients");
}