@page "/funds"
@using GrowIT.Shared.DTOs
@using GrowIT.Client.Shared
@inject HttpClient Http

<div class="container-fluid mt-4">
    <PageHeader Title="Financial Funds" Subtitle="Manage budget sources and track utilization.">
        <Actions>
            <button class="btn shadow-sm text-white fw-bold" style="background-color: var(--growit-success);" @onclick="CreateNew">
                <span class="oi oi-plus me-2"></span>Create New Fund
            </button>
        </Actions>
    </PageHeader>

    @if (funds == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-success" role="status"></div>
            <p class="mt-2 text-muted">Auditing accounts...</p>
        </div>
    }
    else if (!funds.Any())
    {
        <KpiCard Label="Funds" Value="No Funds Configured" Icon="oi-inbox" Class="text-center py-5">
            <p class="small text-secondary mb-4" style="color: var(--growit-text-secondary) !important;">You need to define a funding source before you can serve clients.</p>
            <button class="btn btn-outline-success" @onclick="CreateNew">
                Initialize First Fund
            </button>
        </KpiCard>
    }
    else
    {
        <div class="row">
           @foreach (var fund in funds)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <KpiCard Label="@fund.Name" 
                             Value="@fund.AvailableAmount.ToString("C0")" 
                             Icon="oi-briefcase" 
                             Color="success" 
                             Class="h-100">
                        <div class="position-absolute top-0 end-0 p-2">
                            <button class="btn btn-sm btn-link" style="color: var(--growit-text-muted);" @onclick="() => EditFund(fund)" title="Edit Budget">
                                <span class="oi oi-pencil"></span>
                            </button>
                        </div>
                        
                        <div class="mt-2">
                            <div class="small fw-normal opacity-50 mb-2">Total Budget: @fund.TotalAmount.ToString("C0")</div>
                            <div class="d-flex justify-content-between small mb-1 opacity-75">
                                <span>Utilization</span>
                                <span>@GetPercent(fund)%</span>
                            </div>
                            <div class="progress" style="height: 6px; background-color: var(--growit-bg-primary);">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @($"{GetPercent(fund)}%"); background-color: var(--growit-success);" 
                                     aria-valuenow="@GetPercent(fund)" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </KpiCard>
                </div>
            }
        </div>
    }
</div>

<CreateFundModal @bind-Show="showCreateModal" 
                 FundToEdit="selectedFund" 
                 OnFundCreated="ReloadFunds" />

@code {
    private List<FundDto>? funds;
    private FundDto? selectedFund; 
    private bool showCreateModal = false;

    protected override async Task OnInitializedAsync()
    {
        await ReloadFunds();
    }

    private async Task ReloadFunds()
    {
        try
        {
            funds = await Http.GetFromJsonAsync<List<FundDto>>("api/financials/funds");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private void EditFund(FundDto fund)
    {
        selectedFund = fund;
        showCreateModal = true;
    }

    private void CreateNew()
    {
        selectedFund = null; // Ensure we are in Create Mode
        showCreateModal = true;
    }

    private int GetPercent(FundDto f)
    {
        if (f.TotalAmount == 0) return 0;
        var used = f.TotalAmount - f.AvailableAmount;
        return (int)((used / f.TotalAmount) * 100);
    }
}