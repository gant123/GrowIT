@page "/funds"
@using GrowIT.Shared.DTOs
@using GrowIT.Client.Shared
@inject HttpClient Http

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 fw-bold">Financial Funds</h1>
            <p class="small mb-0 opacity-75">Manage budget sources and track utilization.</p>
        </div>
        <button class="btn btn-success shadow-sm" @onclick="() => showCreateModal = true">
            <span class="oi oi-plus me-2"></span>Create New Fund
        </button>
    </div>

    @if (funds == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-success" role="status"></div>
            <p class="mt-2 text-muted">Auditing accounts...</p>
        </div>
    }
    else if (!funds.Any())
    {
        <div class="kpi-card text-center py-5">
            <span class="oi oi-inbox fs-1 opacity-25 mb-3 d-block"></span>
            <h5 class="fw-bold">No Funds Configured</h5>
            <p class="small opacity-75 mb-4">You need to define a funding source before you can serve clients.</p>
            <button class="btn btn-outline-success" @onclick="() => showCreateModal = true">
                Initialize First Fund
            </button>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var fund in funds)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="kpi-card h-100 border-start border-4 border-success">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <div class="small fw-bold text-success text-uppercase mb-1">
                                    @fund.Name
                                </div>
                                <div class="h4 mb-0 fw-bold">
                                    @fund.AvailableAmount.ToString("C0") 
                                    <span class="small fw-normal opacity-50">/ @fund.TotalAmount.ToString("C0")</span>
                                </div>
                            </div>
                            <div class="p-2 rounded-circle" style="background-color: rgba(39, 176, 98, 0.1);">
                                <span class="oi oi-dollar fs-4 text-success"></span>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <div class="d-flex justify-content-between small mb-1 opacity-75">
                                <span>Utilization</span>
                                <span>@GetPercent(fund)%</span>
                            </div>
                            <div class="progress" style="height: 6px; background-color: var(--growit-bg-primary);">
                                <div class="progress-bar bg-success" role="progressbar" 
                                     style="width: @GetPercent(fund)%" 
                                     aria-valuenow="@GetPercent(fund)" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<CreateFundModal @bind-Show="showCreateModal" OnFundCreated="ReloadFunds" />

@code {
    private List<FundDto>? funds;
    private bool showCreateModal = false;

    protected override async Task OnInitializedAsync()
    {
        await ReloadFunds();
    }

    private async Task ReloadFunds()
    {
        try
        {
            funds = await Http.GetFromJsonAsync<List<FundDto>>("api/financials/funds");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private int GetPercent(FundDto f)
    {
        if (f.TotalAmount == 0) return 0;
        var used = f.TotalAmount - f.AvailableAmount;
        return (int)((used / f.TotalAmount) * 100);
    }
}