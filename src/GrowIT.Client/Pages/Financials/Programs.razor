@page "/programs"
@attribute [Authorize]
@using GrowIT.Shared.DTOs
@using GrowIT.Client.Shared
@inject HttpClient Http

<div class="container-fluid mt-4">
    <PageHeader Title="Programs & Services" Subtitle="Define the types of assistance you offer.">
        <Actions>
            <button class="btn btn-primary shadow-sm" @onclick="() => showCreateModal = true">
                <span class="oi oi-plus me-2"></span>Add Program
            </button>
        </Actions>
    </PageHeader>

    @if (programs == null)
    {
        <div class="text-center py-5"><div class="spinner-border text-primary" role="status"></div></div>
    }
    else if (!programs.Any())
    {
        <KpiCard Label="Programs" Value="No Programs Defined" Icon="oi-list" Class="text-center py-5">
            <p class="small text-secondary mb-4" style="color: var(--growit-text-secondary) !important;">Create services like "Utility Assistance" or "Food Pantry" to track your impact.</p>
            <button class="btn btn-outline" @onclick="() => showCreateModal = true">Create First Program</button>
        </KpiCard>
    }
    else
    {
        <div class="row">
            @foreach (var p in programs)
            {
                <div class="col-md-4 mb-4">
                    <KpiCard Label="Program" Value="@p.Name" Icon="oi-tag" Color="primary" Class="h-100">
                        <p class="text-secondary small mb-2 mt-2" style="color: var(--growit-text-secondary) !important;">@p.Description</p>
                        @if (p.CapacityLimit.HasValue)
                        {
                            <div class="d-flex align-items-center gap-2 mt-3 p-2 rounded" style="background-color: var(--growit-bg-primary); border: 1px solid var(--growit-border);">
                                <span class="oi oi-dashboard text-info small"></span>
                                <span class="small fw-bold">Capacity: @p.CapacityLimit @p.CapacityPeriod</span>
                            </div>
                        }
                    </KpiCard>
                </div>
            }
        </div>
    }
</div>

@if (showCreateModal)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.7); backdrop-filter: blur(4px);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                <div class="modal-header border-bottom" style="border-color: var(--growit-border);">
                    <h5 class="modal-title fw-bold">New Program</h5>
                    <button class="btn btn-link" style="color: var(--growit-text-muted)" @onclick="() => showCreateModal = false"><span class="oi oi-x"></span></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted text-uppercase" style="color: var(--growit-text-muted) !important;">Program Name</label>
                        <input @bind="newProgram.Name" class="form-control" style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);" placeholder="e.g. Utility Assistance" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted text-uppercase" style="color: var(--growit-text-muted) !important;">Description</label>
                        <textarea @bind="newProgram.Description" class="form-control" rows="3" style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);" placeholder="What does this service provide?"></textarea>
                    </div>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted text-uppercase" style="color: var(--growit-text-muted) !important;">Capacity Limit</label>
                            <input @bind="newProgram.CapacityLimit" type="number" class="form-control" style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);" placeholder="e.g. 50" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted text-uppercase" style="color: var(--growit-text-muted) !important;">Period</label>
                            <select @bind="newProgram.CapacityPeriod" class="form-select" style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);">
                                <option value="">None</option>
                                <option value="Weekly">Weekly</option>
                                <option value="Monthly">Monthly</option>
                                <option value="Annual">Annual</option>
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-primary w-100 fw-bold" @onclick="CreateProgram">Save Program</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<ProgramDto>? programs;
    private bool showCreateModal = false;
    private CreateProgramRequest newProgram = new();
    private string InputStyle => "background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);";

    protected override async Task OnInitializedAsync() => await LoadPrograms();

    private async Task LoadPrograms()
    {
        try { programs = await Http.GetFromJsonAsync<List<ProgramDto>>("api/financials/programs"); }
        catch { /* Handle error */ }
    }

    private async Task CreateProgram()
    {
        var response = await Http.PostAsJsonAsync("api/financials/programs", newProgram);
        if (response.IsSuccessStatusCode)
        {
            showCreateModal = false;
            newProgram = new();
            await LoadPrograms();
        }
    }
}