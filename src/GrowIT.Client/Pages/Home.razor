@page "/"
@using System.Security.Claims

<PageTitle>GrowIT Dashboard</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="card shadow-sm border-success mt-4">
            <div class="card-body text-center">
                <h1 class="text-success display-4">🌱</h1>
                <h2>Welcome back, <span class="fw-bold">@context.User.FindFirst("email")?.Value</span>!</h2>
                <p class="text-muted">
                    You are currently logged into Tenant ID: <br />
                    <code>@context.User.FindFirst("tenantId")?.Value</code>
                </p>
                <hr />
                <button class="btn btn-outline-danger" @onclick="Logout">Logout</button>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center mt-5">
            <h1>Welcome to GrowIT</h1>
            <p class="lead">Please login to manage your organization.</p>
            <a href="login" class="btn btn-primary btn-lg">Login Now</a>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Inject] AuthenticationStateProvider AuthStateProvider { get; set; }
    [Inject] NavigationManager NavManager { get; set; }
    [Inject] ILocalStorageService LocalStorage { get; set; }

    private async Task Logout()
    {
        // 1. Remove the token from the "backpack"
        await LocalStorage.RemoveItemAsync("authToken");
        
        // 2. Tell the app "We are out"
        ((CustomAuthStateProvider)AuthStateProvider).MarkUserAsLoggedOut();
        
        // 3. Refresh
        NavManager.NavigateTo("/");
    }
}