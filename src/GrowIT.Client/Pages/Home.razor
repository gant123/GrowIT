@page "/"
@using GrowIT.Client.Auth
@inject AuthenticationStateProvider AuthStateProvider

<AuthorizeView>
    <Authorized>
        <div class="container-fluid mt-4">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                <span class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                    <i class="oi oi-calendar me-1"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
                </span>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-white">
                            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex gap-3 flex-wrap">
                                <a href="clients/create" class="btn btn-outline-primary btn-lg flex-grow-1 p-4 text-center">
                                    <div class="fs-1 mb-2"><i class="oi oi-people"></i></div>
                                    Add New Client
                                </a>
                                <a href="investments/create" class="btn btn-outline-success btn-lg flex-grow-1 p-4 text-center">
                                    <div class="fs-1 mb-2"><i class="oi oi-dollar"></i></div>
                                    Record Investment
                                </a>
                                <a href="funds" class="btn btn-outline-info btn-lg flex-grow-1 p-4 text-center">
                                    <div class="fs-1 mb-2"><i class="oi oi-pie-chart"></i></div>
                                    Check Budget
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info border-left-info shadow-sm" role="alert">
                <h4 class="alert-heading"><i class="oi oi-info me-2"></i>Welcome to GrowIT v1.0</h4>
                <p>
                    You are logged in as <strong>@context.User.Identity?.Name</strong>. 
                    Use the sidebar to manage your Funds, Clients, and Investments.
                </p>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="text-center mt-5 pt-5">
            <h1 class="display-4 fw-bold text-primary">GrowIT</h1>
            <p class="lead mb-4">Enterprise Resource Management System</p>
            <a href="login" class="btn btn-primary btn-lg px-5 shadow-lg rounded-pill">Login to Dashboard</a>
        </div>
    </NotAuthorized>
</AuthorizeView>