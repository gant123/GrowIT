@page "/"
@using GrowIT.Shared.DTOs
@using Syncfusion.Blazor.Charts 
@inject HttpClient Http
@inject NavigationManager Nav

<PageTitle>GrowIT - Executive Dashboard</PageTitle>

@if (stats == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-success" role="status"></div>
        <p class="mt-2 text-muted">Calculating harvest...</p>
    </div>
}
else
{
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 fw-bold" style="color: var(--growit-heading-color);">Executive Dashboard</h1>
                <p class="text-muted mb-0">Year-to-Date Impact Report</p>
            </div>
            <button class="btn btn-outline-secondary" @onclick="Refresh">
                <span class="oi oi-reload me-1"></span> Refresh
            </button>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-uppercase small fw-bold text-muted">Invested YTD</div>
                            <span class="oi oi-dollar text-success bg-success bg-opacity-10 p-2 rounded"></span>
                        </div>
                        <div class="display-6 fw-bold text-dark">@stats.TotalInvestedYtd.ToString("C0")</div>
                        <div class="small text-muted mt-1">Direct Aid Distributed</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-uppercase small fw-bold text-muted">Households</div>
                            <span class="oi oi-home text-primary bg-primary bg-opacity-10 p-2 rounded"></span>
                        </div>
                        <div class="display-6 fw-bold text-dark">@stats.HouseholdsServedYtd</div>
                        <div class="small text-muted mt-1">Unique Families Served</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-uppercase small fw-bold text-muted">Active Cases</div>
                            <span class="oi oi-people text-warning bg-warning bg-opacity-10 p-2 rounded"></span>
                        </div>
                        <div class="display-6 fw-bold text-dark">@stats.ActiveCases</div>
                        <div class="small text-muted mt-1">Total Profiles Managed</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div class="text-uppercase small fw-bold text-muted">Funds Available</div>
                            <span class="oi oi-briefcase text-info bg-info bg-opacity-10 p-2 rounded"></span>
                        </div>
                        <div class="display-6 fw-bold text-dark">@stats.FundsAvailable.ToString("C0")</div>
                        <div class="small text-muted mt-1">Remaining Budget</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm" style="background-color: var(--growit-bg-card);">
                    <div class="card-body">
                        <SfChart Title="Monthly Investment Trends" Height="350px">
                            <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" 
                                               Title="Month"
                                               LabelPlacement="LabelPlacement.OnTicks">
                                <ChartAxisMajorGridLines Width="0"></ChartAxisMajorGridLines>
                            </ChartPrimaryXAxis>
                            
                            <ChartPrimaryYAxis LabelFormat="${value}" Title="Amount Invested ($)">
                                <ChartAxisLineStyle Width="0"></ChartAxisLineStyle>
                            </ChartPrimaryYAxis>
                            
                            <ChartTooltipSettings Enable="true" Shared="true"></ChartTooltipSettings>
                            
                            <ChartSeriesCollection>
                                <ChartSeries DataSource="@stats.MonthlyTrends" 
                                             XName="Month" 
                                             YName="Amount" 
                                             Type="ChartSeriesType.Spline" 
                                             Width="4"
                                             Fill="var(--growit-green)">
                                    <ChartMarker Visible="true" Width="10" Height="10" Shape="ChartShape.Circle" Fill="white">
                                        <ChartMarkerBorder Width="2" Color="var(--growit-green)"></ChartMarkerBorder>
                                    </ChartMarker>
                                </ChartSeries>
                            </ChartSeriesCollection>
                        </SfChart>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-5">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card);">
                    <div class="card-header bg-transparent fw-bold py-3 border-bottom d-flex justify-content-between align-items-center" 
                         style="border-color: var(--growit-border);">
                        <span><span class="oi oi-clipboard me-2 text-warning"></span>To-Grow List</span>
                        <span class="badge bg-warning text-dark rounded-pill">@stats.PendingFollowUps.Count</span>
                    </div>
                    <div class="card-body p-0">
                        @if (stats.PendingFollowUps.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var task in stats.PendingFollowUps)
                                {
                                    <div class="list-group-item p-3 d-flex gap-3 align-items-start" style="cursor: pointer;" 
                                         @onclick="() => NavigateToClient(task.ClientId)">
                                        <div class="mt-1">
                                            <input class="form-check-input" type="checkbox" style="cursor: pointer;">
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <span class="fw-bold">@task.ClientName</span>
                                                <small class="text-danger fw-bold">Due: @task.DueDate.ToString("MMM dd")</small>
                                            </div>
                                            <p class="mb-0 small text-muted">@task.Note</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 opacity-50">
                                <span class="oi oi-circle-check fs-1 mb-3 d-block text-success"></span>
                                <p>All follow-ups complete!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="card border-0 shadow-sm h-100" style="background-color: var(--growit-bg-card);">
                    <div class="card-header bg-transparent fw-bold py-3 border-bottom" style="border-color: var(--growit-border);">
                        <span class="oi oi-pulse me-2 text-primary"></span>Live Harvest Feed
                    </div>
                    <div class="card-body p-0">
                        @if (stats.RecentActivity.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var item in stats.RecentActivity)
                                {
                                    <div class="list-group-item p-3 d-flex gap-3 align-items-center">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center border" 
                                             style="width: 42px; height: 42px; min-width: 42px; border-color: var(--growit-border);">
                                            <span class="oi @item.Icon @item.Color"></span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="fw-bold text-dark">@item.Description</span>
                                                <small class="text-muted ms-2" style="white-space: nowrap;">@GetTimeAgo(item.Date)</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5 opacity-50">
                                <p>No recent activity recorded.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private DashboardStatsDto? stats;

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }

    private async Task Refresh()
    {
        try 
        {
            stats = await Http.GetFromJsonAsync<DashboardStatsDto>("api/dashboard");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
    }

    private void NavigateToClient(Guid clientId)
    {
        Nav.NavigateTo($"clients/{clientId}");
    }

    private string GetTimeAgo(DateTime date)
    {
        var span = DateTime.UtcNow - date;
        if (span.TotalMinutes < 1) return "Just now";
        if (span.TotalHours < 1) return $"{span.Minutes}m ago";
        if (span.TotalHours < 24) return $"{span.Hours}h ago";
        return $"{span.Days}d ago";
    }
}