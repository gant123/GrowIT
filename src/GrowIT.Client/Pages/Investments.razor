@page "/investments"
@using GrowIT.Client.Services
@using GrowIT.Shared.DTOs
@using GrowIT.Shared.Enums
@inject IInvestmentService InvestmentService
@inject NavigationManager Navigation

<PageTitle>Investments - grow.IT</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 fw-bold">Investments</h1>
        <button class="btn btn-primary" @onclick='() => Navigation.NavigateTo("/investments/new")'>
            New Investment
        </button>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Search..." @bind="SearchQuery" @bind:event="oninput" />
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="StatusFilter">
                <option value="">All Statuses</option>
                @foreach (var status in Enum.GetValues<GrowIT.Shared.Enums.InvestmentStatus>())
                {
                    <option value="@status">@status</option>
                }
            </select>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="spinner-border text-primary"></div>
    }
    else
    {
        <table class="table table-hover bg-white shadow-sm rounded">
            <thead class="bg-light">
                <tr>
                    <th>Date</th>
                    <th>Person</th>
                    <th>Purpose</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inv in FilteredInvestments)
                {
                    <tr>
                        <td>@inv.Date.ToString("MMM d, yyyy")</td>
                        <td class="fw-bold text-primary">@inv.PersonName</td>
                        <td>@inv.Purpose</td>
                        <td class="fw-bold">@inv.Amount.ToString("C0")</td>
                        <td>
                            <span class="badge @GetBadge(inv.Status)">@inv.Status</span>
                        </td>
                        <td class="text-end">
                            @if (inv.Status == GrowIT.Shared.Enums.InvestmentStatus.Pending)
                            {
                                <button class="btn btn-sm btn-success me-1" @onclick="() => Approve(inv.Id)">Approve</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@code {
    private List<InvestmentListDto> _investments = new();
    private bool _isLoading = true;
    private string SearchQuery { get; set; } = "";
    private string StatusFilter { get; set; } = "";

    private IEnumerable<InvestmentListDto> FilteredInvestments
    {
        get
        {
            var query = _investments.AsEnumerable();
            if (!string.IsNullOrEmpty(SearchQuery))
                query = query.Where(i => i.PersonName.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase) || i.Purpose.Contains(SearchQuery, StringComparison.OrdinalIgnoreCase));
            
            // FIXED: Fully qualified name
            if (!string.IsNullOrEmpty(StatusFilter) && Enum.TryParse<GrowIT.Shared.Enums.InvestmentStatus>(StatusFilter, out var status))
                query = query.Where(i => i.Status == status);

            return query.OrderByDescending(i => i.Date);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _investments = await InvestmentService.GetAllInvestmentsAsync();
        }
        finally { _isLoading = false; }
    }

 private async Task Approve(Guid id)
{
    // Ensure you provide the required 'approvedBy' parameter
    await InvestmentService.ApproveInvestmentAsync(id, "Current User"); 
    await OnInitializedAsync(); 
}
    // FIXED: Fully qualified name
    private string GetBadge(GrowIT.Shared.Enums.InvestmentStatus status) => status switch
    {
        GrowIT.Shared.Enums.InvestmentStatus.Approved => "bg-success",
        GrowIT.Shared.Enums.InvestmentStatus.Pending => "bg-warning text-dark",
        GrowIT.Shared.Enums.InvestmentStatus.Rejected => "bg-danger",
        _ => "bg-secondary"
    };
}