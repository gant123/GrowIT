@page "/login"
@layout PublicLayout
@inject NavigationManager Navigation

<PageTitle>Sign In - grow.IT</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <!-- Logo -->
            <div class="auth-logo">
                <a href="/welcome">
                    <svg class="brand-icon" viewBox="0 0 32 32" fill="none">
                        <circle cx="16" cy="16" r="14" fill="url(#authGradient)"/>
                        <path d="M16 8c0 4-2 6-2 10s2 6 2 6M12 14c2-2 6-2 8 0M10 18c3-2 9-2 12 0" 
                              stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                        <defs>
                            <linearGradient id="authGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" stop-color="#22c55e"/>
                                <stop offset="100%" stop-color="#16a34a"/>
                            </linearGradient>
                        </defs>
                    </svg>
                    <span class="brand-text">grow<span class="brand-highlight">.IT</span></span>
                </a>
            </div>

            <!-- Header -->
            <div class="auth-header">
                <h1>Welcome back</h1>
                <p>Sign in to continue to your dashboard</p>
            </div>

            <!-- Error Alert -->
            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="auth-alert error">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="15" y1="9" x2="9" y2="15"/>
                        <line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                    <span>@_errorMessage</span>
                </div>
            }

            <!-- Login Form -->
            <form class="auth-form" @onsubmit="HandleLogin" @onsubmit:preventDefault>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <div class="input-wrapper">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="input-icon">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                            <polyline points="22,6 12,13 2,6"/>
                        </svg>
                        <input type="email" 
                               id="email" 
                               @bind="_email" 
                               placeholder="you@nonprofit.org"
                               autocomplete="email"
                               required />
                    </div>
                </div>

                <div class="form-group">
                    <div class="label-row">
                        <label for="password">Password</label>
                        <a href="/forgot-password" class="forgot-link">Forgot password?</a>
                    </div>
                    <div class="input-wrapper">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="input-icon">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                        </svg>
                        <input type="@(_showPassword ? "text" : "password")" 
                               id="password" 
                               @bind="_password" 
                               placeholder="Enter your password"
                               autocomplete="current-password"
                               required />
                        <button type="button" class="password-toggle" @onclick="TogglePassword">
                            @if (_showPassword)
                            {
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"/>
                                    <line x1="1" y1="1" x2="23" y2="23"/>
                                </svg>
                            }
                            else
                            {
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                                    <circle cx="12" cy="12" r="3"/>
                                </svg>
                            }
                        </button>
                    </div>
                </div>

                <div class="form-group checkbox-group">
                    <label class="checkbox-label">
                        <input type="checkbox" @bind="_rememberMe" />
                        <span class="checkbox-custom"></span>
                        <span>Remember me for 30 days</span>
                    </label>
                </div>

                <button type="submit" class="btn btn-primary btn-block btn-lg" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="btn-spinner"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign in</span>
                    }
                </button>
            </form>

            <!-- Divider -->
            <div class="auth-divider">
                <span>or continue with</span>
            </div>

            <!-- Social Login -->
            <div class="social-buttons">
                <button type="button" class="btn btn-social" @onclick="LoginWithGoogle">
                    <svg viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    Google
                </button>
                <button type="button" class="btn btn-social" @onclick="LoginWithMicrosoft">
                    <svg viewBox="0 0 24 24">
                        <path fill="#F25022" d="M1 1h10v10H1z"/>
                        <path fill="#00A4EF" d="M1 13h10v10H1z"/>
                        <path fill="#7FBA00" d="M13 1h10v10H13z"/>
                        <path fill="#FFB900" d="M13 13h10v10H13z"/>
                    </svg>
                    Microsoft
                </button>
            </div>

            <!-- Footer -->
            <div class="auth-footer">
                <p>Don't have an account? <a href="/register">Create one free</a></p>
            </div>
        </div>

        <!-- Side Content -->
        <div class="auth-side">
            <div class="auth-side-content">
                <blockquote>
                    "grow.IT has transformed how we report to funders. What used to take days now takes minutes."
                </blockquote>
                <div class="testimonial-author">
                    <div class="author-avatar">JD</div>
                    <div>
                        <span class="author-name">Jennifer Davis</span>
                        <span class="author-role">Program Director, Helping Hands</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string _email = "";
    private string _password = "";
    private bool _rememberMe = false;
    private bool _showPassword = false;
    private bool _isLoading = false;
    private string? _errorMessage;

    private void TogglePassword()
    {
        _showPassword = !_showPassword;
    }

    private async Task HandleLogin()
    {
        _errorMessage = null;
        _isLoading = true;

        try
        {
            // Simulate API call
            await Task.Delay(1500);

            // In production, this would call an auth service
            if (_email == "demo@growit.app" && _password == "demo123")
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                _errorMessage = "Invalid email or password. Please try again.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "An error occurred. Please try again later.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void LoginWithGoogle()
    {
        // OAuth with Google
    }

    private void LoginWithMicrosoft()
    {
        // OAuth with Microsoft
    }
}
