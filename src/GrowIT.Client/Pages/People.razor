@page "/people"
@using GrowIT.Shared.DTOs
@using GrowIT.Shared.Enums
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>People - grow.IT</PageTitle>

<div class="page-people container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-dark">People Directory</h1>
            <p class="text-muted">Manage individuals and families.</p>
        </div>
        <button class="btn btn-primary" @onclick="OpenAddPerson">
            <span class="oi oi-plus me-2"></span>Add Person
        </button>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-3">
            <div class="input-group">
                <span class="input-group-text bg-white"><span class="oi oi-magnifying-glass"></span></span>
                <input type="text" class="form-control border-start-0" placeholder="Search people..." 
                       @bind="_searchQuery" @bind:event="oninput" @onkeyup="HandleSearch" />
            </div>
        </div>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else
    {
        <div class="table-responsive bg-white rounded shadow-sm">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Phase</th>
                        <th>Stability</th>
                        <th>Contact</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in _people)
                    {
                        <tr @onclick="() => ViewPerson(person.Id)" style="cursor: pointer;">
                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rounded-circle d-flex align-items-center justify-content-center bg-light fw-bold text-primary" 
                                         style="width: 40px; height: 40px;">
                                        @GetInitials(person.Name)
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@person.Name</div>
                                        <div class="small text-muted">@person.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-opacity-10 text-dark border @GetPhaseColor(person.LifePhase)">
                                    @person.LifePhase
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-2" style="width: 120px;">
                                    <span class="small fw-bold">@person.StabilityScore</span>
                                    <div class="progress flex-grow-1" style="height: 6px;">
                                        <div class="progress-bar @(person.StabilityScore < 5 ? "bg-danger" : "bg-success")" 
                                             style="width: @(person.StabilityScore * 10)%"></div>
                                    </div>
                                </div>
                            </td>
                            <td>@person.Phone</td>
                            <td class="text-end pe-4">
                                <button class="btn btn-sm btn-outline-secondary">View</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    // Switched from undefined PersonListDto to standard ClientDto
    private List<ClientDto> _people = new();
    private string _searchQuery = "";
    private bool _isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        try 
        {
            // Simple fetch for now - in production use full search endpoint
            _people = await Http.GetFromJsonAsync<List<ClientDto>>("api/clients") ?? new();
            
            if (!string.IsNullOrEmpty(_searchQuery))
            {
                _people = _people.Where(p => p.Name.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase)).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task HandleSearch(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await LoadData();
    }

    private void ViewPerson(Guid id) => Navigation.NavigateTo($"/clients/{id}");
    private void OpenAddPerson() => Navigation.NavigateTo("/clients/create"); // Updated route

    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        return parts.Length > 1 ? $"{parts[0][0]}{parts[^1][0]}".ToUpper() : name[0].ToString().ToUpper();
    }

    private string GetPhaseColor(string phase) => phase?.ToLower() switch
    {
        "crisis" => "bg-danger text-danger",
        "stability" => "bg-warning text-warning",
        "growth" => "bg-success text-success",
        _ => "bg-secondary"
    };
}