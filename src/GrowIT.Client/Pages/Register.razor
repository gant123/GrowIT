@page "/register"
@layout PublicLayout
@inject NavigationManager Navigation

<PageTitle>Create Account - grow.IT</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card register-card">
            <div class="auth-logo">
                <a href="/welcome">
                    <svg class="brand-icon" viewBox="0 0 32 32" fill="none">
                        <circle cx="16" cy="16" r="14" fill="url(#regGradient)"/>
                        <path d="M16 8c0 4-2 6-2 10s2 6 2 6M12 14c2-2 6-2 8 0M10 18c3-2 9-2 12 0" 
                              stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                        <defs>
                            <linearGradient id="regGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" stop-color="#22c55e"/>
                                <stop offset="100%" stop-color="#16a34a"/>
                            </linearGradient>
                        </defs>
                    </svg>
                    <span class="brand-text">grow<span class="brand-highlight">.IT</span></span>
                </a>
            </div>

            <div class="auth-header">
                <h1>Create your account</h1>
                <p>Start managing your community impact today.</p>
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="8" x2="12" y2="12"/>
                        <line x1="12" y1="16" x2="12.01" y2="16"/>
                    </svg>
                    @_errorMessage
                </div>
            }

            <div class="steps-indicator">
                <div class="step @(_currentStep >= 1 ? "active" : "")">
                    <div class="step-circle">1</div>
                    <span>Account</span>
                </div>
                <div class="step-line @(_currentStep >= 2 ? "active" : "")"></div>
                <div class="step @(_currentStep >= 2 ? "active" : "")">
                    <div class="step-circle">2</div>
                    <span>Details</span>
                </div>
                <div class="step-line @(_currentStep >= 3 ? "active" : "")"></div>
                <div class="step @(_currentStep >= 3 ? "active" : "")">
                    <div class="step-circle">3</div>
                    <span>Confirm</span>
                </div>
            </div>

            <div class="auth-form">
                @if (_currentStep == 1)
                {
                    <div class="form-group">
                        <label>Email Address</label>
                        <div class="input-wrapper">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                                <polyline points="22,6 12,13 2,6"/>
                            </svg>
                            <input type="email" class="form-control" placeholder="name@organization.org" @bind="_email" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <div class="input-wrapper">
                            <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                                <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                            </svg>
                            <input type="@(_showPassword ? "text" : "password")" class="form-control" placeholder="Create a strong password" 
                                   @bind="_password" @oninput="UpdatePasswordStrength" />
                            <button type="button" class="password-toggle" @onclick="TogglePassword">
                                @if (_showPassword)
                                {
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24M1 1l22 22"/></svg>
                                }
                                else
                                {
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/><circle cx="12" cy="12" r="3"/></svg>
                                }
                            </button>
                        </div>
                        @if (!string.IsNullOrEmpty(_password))
                        {
                            <div class="password-strength">
                                <div class="strength-bar">
                                    <div class="strength-fill @_passwordStrengthClass" style="width: @(_passwordStrength)%"></div>
                                </div>
                                <span class="strength-text @_passwordStrengthClass">@_passwordStrengthText</span>
                            </div>
                        }
                    </div>

                    <button class="btn-auth" @onclick="GoToStep2">
                        Continue
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="5" y1="12" x2="19" y2="12"/>
                            <polyline points="12 5 19 12 12 19"/>
                        </svg>
                    </button>

                    <div class="auth-divider">
                        <span>or register with</span>
                    </div>

                    <div class="social-auth">
                        <button class="btn-social" @onclick="SignupWithGoogle">
                            <svg viewBox="0 0 24 24" width="20" height="20">
                                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                            </svg>
                            Google
                        </button>
                        <button class="btn-social" @onclick="SignupWithMicrosoft">
                            <svg viewBox="0 0 23 23" width="20" height="20">
                                <path fill="#f3f3f3" d="M0 0h23v23H0z"/>
                                <path fill="#f35325" d="M1 1h10v10H1z"/>
                                <path fill="#81bc06" d="M12 1h10v10H1z"/>
                                <path fill="#05a6f0" d="M1 12h10v10H1z"/>
                                <path fill="#ffba08" d="M12 12h10v10H1z"/>
                            </svg>
                            Microsoft
                        </button>
                    </div>
                }
                else if (_currentStep == 2)
                {
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control" placeholder="John Doe" @bind="_fullName" />
                    </div>
                    <div class="form-group">
                        <label>Organization Name</label>
                        <input type="text" class="form-control" placeholder="Community Helpers Inc." @bind="_orgName" />
                    </div>
                    
                    <div class="step-actions">
                        <button class="btn-back" @onclick="() => _currentStep = 1">Back</button>
                        <button class="btn-auth" @onclick="GoToStep3">Next</button>
                    </div>
                }
                else if (_currentStep == 3)
                {
                    <div class="confirmation-summary">
                        <p><strong>Email:</strong> @_email</p>
                        <p><strong>Name:</strong> @_fullName</p>
                        <p><strong>Org:</strong> @_orgName</p>
                    </div>

                    <div class="form-check mb-4">
                        <input type="checkbox" id="terms" @bind="_agreeToTerms" />
                        <label for="terms">I agree to the <a href="#">Terms of Service</a></label>
                    </div>

                    <div class="step-actions">
                        <button class="btn-back" @onclick="() => _currentStep = 2">Back</button>
                        <button class="btn-auth" @onclick="CompleteRegistration" disabled="@_isLoading">
                            @if (_isLoading)
                            {
                                <span class="spinner"></span>
                            }
                            else
                            {
                                <span>Create Account</span>
                            }
                        </button>
                    </div>
                }
            </div>

            <div class="auth-footer">
                <p>Already have an account? <a href="/login">Sign in</a></p>
            </div>
        </div>
    </div>
</div>

@code {
    private int _currentStep = 1;
    private string _email = "";
    private string _password = "";
    private string _fullName = "";
    private string _orgName = "";
    private bool _showPassword = false;
    private bool _agreeToTerms = false;
    private bool _isLoading = false;
    private string? _errorMessage;
    
    // Password Strength Variables
    private int _passwordStrength = 0;
    private string _passwordStrengthClass = "";
    private string _passwordStrengthText = "";

    private void TogglePassword()
    {
        _showPassword = !_showPassword;
    }

    private void UpdatePasswordStrength(ChangeEventArgs e)
    {
        _password = e.Value?.ToString() ?? "";
        // Simple mock strength calculation
        _passwordStrength = Math.Min(_password.Length * 10, 100);
        
        if (_passwordStrength < 30) {
            _passwordStrengthClass = "weak";
            _passwordStrengthText = "Weak";
        } else if (_passwordStrength < 70) {
            _passwordStrengthClass = "fair";
            _passwordStrengthText = "Fair";
        } else {
            _passwordStrengthClass = "strong";
            _passwordStrengthText = "Strong";
        }
    }

    private void GoToStep2()
    {
        if (string.IsNullOrWhiteSpace(_email) || string.IsNullOrWhiteSpace(_password))
        {
            _errorMessage = "Please fill in all fields.";
            return;
        }
        _errorMessage = null;
        _currentStep = 2;
    }

    private void GoToStep3()
    {
        if (string.IsNullOrWhiteSpace(_fullName) || string.IsNullOrWhiteSpace(_orgName))
        {
            _errorMessage = "Please fill in all fields.";
            return;
        }
        _errorMessage = null;
        _currentStep = 3;
    }

    private async Task CompleteRegistration()
    {
        if (!_agreeToTerms)
        {
            _errorMessage = "You must agree to the terms.";
            return;
        }

        _isLoading = true;
        // Mock API delay
        await Task.Delay(1000);
        _isLoading = false;
        Navigation.NavigateTo("/");
    }

    private void SignupWithGoogle() { /* Mock Logic */ }
    private void SignupWithMicrosoft() { /* Mock Logic */ }
}