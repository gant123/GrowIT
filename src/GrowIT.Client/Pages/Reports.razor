@page "/reports"
@attribute [Authorize]

<div style="max-width: 800px; margin: 0 auto;">
    <div class="page-header">
        <div>
            <h1 class="page-title">Reports</h1>
            <p class="page-subtitle">Analytics and impact reporting</p>
        </div>
    </div>

    <div class="card-growit" style="text-align: center; padding: 48px;">
        <span class="oi oi-bar-chart" style="font-size: 48px; color: var(--growit-text-muted); display: block; margin-bottom: 16px;"></span>
        <h2 style="font-size: 20px; color: var(--growit-text-primary); margin: 0 0 8px 0;">Reports Coming Soon</h2>
        <p style="color: var(--growit-text-secondary); margin: 0 0 24px 0;">Advanced analytics and impact reporting features are currently in development.</p>
        
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <div class="d-flex align-items-center gap-2 px-3 py-2 rounded" style="background-color: var(--growit-bg-secondary);">
                <span class="oi oi-graph" style="color: var(--growit-green);"></span>
                <span style="color: var(--growit-text-primary); font-size: 13px;">Impact Metrics</span>
            </div>
            <div class="d-flex align-items-center gap-2 px-3 py-2 rounded" style="background-color: var(--growit-bg-secondary);">
                <span class="oi oi-pie-chart" style="color: var(--growit-blue);"></span>
                <span style="color: var(--growit-text-primary); font-size: 13px;">Fund Utilization</span>
            </div>
            <div class="d-flex align-items-center gap-2 px-3 py-2 rounded" style="background-color: var(--growit-bg-secondary);">
                <span class="oi oi-people" style="color: var(--growit-warning);"></span>
                <span style="color: var(--growit-text-primary); font-size: 13px;">Client Progress</span>
            </div>
        </div>
    </div>
</div>
