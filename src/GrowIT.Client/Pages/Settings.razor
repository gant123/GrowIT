@page "/settings"
@attribute [Authorize]

<div style="max-width: 1000px; margin: 0 auto;">
    <PageHeader Title="Settings" Subtitle="Manage your organization and preferences" />

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card-growit h-100">
                <div class="card-body">
                    <span class="oi oi-home" style="font-size: 28px; color: var(--growit-green); display: block; margin-bottom: 12px;"></span>
                    <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">Organization</h3>
                    <p style="font-size: 13px; color: var(--growit-text-secondary); margin: 0 0 16px 0;">Manage your organization details and branding.</p>
                    <button class="btn-secondary-growit" disabled style="opacity: 0.5;">Configure</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-growit h-100">
                <div class="card-body">
                    <span class="oi oi-people" style="font-size: 28px; color: var(--growit-blue); display: block; margin-bottom: 12px;"></span>
                    <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">Users & Roles</h3>
                    <p style="font-size: 13px; color: var(--growit-text-secondary); margin: 0 0 16px 0;">Invite team members and manage access permissions.</p>
                    <button class="btn-secondary-growit" disabled style="opacity: 0.5;">Manage</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-growit h-100">
                <div class="card-body">
                    <span class="oi oi-bell" style="font-size: 28px; color: var(--growit-warning); display: block; margin-bottom: 12px;"></span>
                    <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">Notifications</h3>
                    <p style="font-size: 13px; color: var(--growit-text-secondary); margin: 0 0 16px 0;">Configure email alerts and notification preferences.</p>
                    <button class="btn-secondary-growit" disabled style="opacity: 0.5;">Configure</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-growit h-100">
                <div class="card-body">
                    <span class="oi oi-link-intact" style="font-size: 28px; color: var(--growit-text-secondary); display: block; margin-bottom: 12px;"></span>
                    <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">Integrations</h3>
                    <p style="font-size: 13px; color: var(--growit-text-secondary); margin: 0 0 16px 0;">Connect with external services and data sources.</p>
                    <button class="btn-secondary-growit" disabled style="opacity: 0.5;">View</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-growit h-100">
                <div class="card-body">
                    <span class="oi oi-credit-card" style="font-size: 28px; color: var(--growit-success); display: block; margin-bottom: 12px;"></span>
                    <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">Billing</h3>
                    <p style="font-size: 13px; color: var(--growit-text-secondary); margin: 0 0 16px 0;">Manage your subscription and payment methods.</p>
                    <button class="btn-secondary-growit" disabled style="opacity: 0.5;">Manage</button>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-growit h-100">
                <div class="card-body">
                    <span class="oi oi-lock-locked" style="font-size: 28px; color: var(--growit-danger); display: block; margin-bottom: 12px;"></span>
                    <h3 style="font-size: 16px; font-weight: 600; margin: 0 0 8px 0;">Security</h3>
                    <p style="font-size: 13px; color: var(--growit-text-secondary); margin: 0 0 16px 0;">Password policies and two-factor authentication.</p>
                    <button class="btn-secondary-growit" disabled style="opacity: 0.5;">Configure</button>
                </div>
            </div>
        </div>
    </div>
</div>
