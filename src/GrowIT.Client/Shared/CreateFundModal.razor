@using GrowIT.Shared.DTOs
@inject HttpClient Http

@if (Show)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.7); backdrop-filter: blur(4px);" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            
            <div class="modal-content border-0 shadow-lg" 
                 style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                
                <div class="modal-header border-bottom" style="border-color: var(--growit-border);">
                    <div>
                        <h5 class="modal-title fw-bold mb-1">
                            <span class="oi oi-dollar text-success me-2"></span>Initialize New Fund
                        </h5>
                        <p class="mb-0 small text-uppercase fw-bold opacity-75">Financial Source Configuration</p>
                    </div>
                    <button type="button" class="btn btn-link text-decoration-none" style="color: var(--growit-text-muted);" @onclick="Close">
                        <span class="oi oi-x fs-5"></span>
                    </button>
                </div>

                <div class="modal-body p-4">
                    <div class="alert border-0 d-flex align-items-center mb-4" role="alert" 
                         style="background-color: rgba(62, 162, 240, 0.15); color: #3b82f6;">
                        <span class="oi oi-info me-3 fs-5"></span>
                        <div class="small">
                            <strong>Fund Definition</strong><br/>
                            A "Fund" is a bucket of money available to spend (e.g., "Grant 2026").
                        </div>
                    </div>

                    <EditForm Model="@request" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label class="form-label small fw-bold text-uppercase opacity-75">Fund Name</label>
                            <InputText @bind-Value="request.Name" class="form-control form-control-lg" 
                                       placeholder="e.g. General Benevolence 2026" 
                                       style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);" />
                            <ValidationMessage For="@(() => request.Name)" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-bold text-uppercase opacity-75">Total Budget</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text fw-bold text-success" 
                                      style="background-color: var(--growit-bg-primary); border-color: var(--growit-border);">$</span>
                                <InputNumber @bind-Value="request.TotalAmount" class="form-control fw-bold" 
                                             placeholder="0.00" 
                                             style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border-color: var(--growit-border);" />
                            </div>
                            <div class="form-text small opacity-50">Maximum amount distributable from this source.</div>
                            <ValidationMessage For="@(() => request.TotalAmount)" />
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top" style="border-color: var(--growit-border) !important;">
                            <button type="button" class="btn btn-outline-secondary px-4" @onclick="Close">Cancel</button>
                            <button type="submit" class="btn btn-success px-4 shadow-sm fw-bold">
                                <span class="oi oi-plus me-2"></span>Create Fund
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public EventCallback OnFundCreated { get; set; }

    private CreateFundRequest request = new();

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/financials/funds", request);
        if (response.IsSuccessStatusCode)
        {
            await Close();
            await OnFundCreated.InvokeAsync();
        }
    }

    private async Task Close()
    {
        Show = false;
        request = new(); 
        await ShowChanged.InvokeAsync(false);
    }
}