@using GrowIT.Shared.DTOs
@inject HttpClient Http
@inject NavigationManager NavManager

@if (Show)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.7); backdrop-filter: blur(4px); z-index: 1050;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            
            <div class="modal-content border-0 shadow-lg" 
                 style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                
                <div class="modal-header" style="border-bottom: 1px solid var(--growit-border);">
                    <div>
                        <h5 class="modal-title fw-bold mb-1" style="color: var(--growit-text-primary);">
                            <span class="oi oi-briefcase me-2" style="color: var(--growit-green);"></span>New Investment
                        </h5>
                        <p class="mb-0 small text-uppercase fw-bold" style="color: var(--growit-text-secondary);">Action: Plant a Seed</p>
                    </div>
                    <button type="button" class="btn btn-link text-decoration-none" style="color: var(--growit-text-muted);" @onclick="Close">
                        <span class="oi oi-x fs-5"></span>
                    </button>
                </div>

                <div class="modal-body p-4">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border" style="color: var(--growit-green);" role="status"></div>
                            <p class="mt-2 small" style="color: var(--growit-text-secondary);">Checking fertile ground...</p>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@request" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Beneficiary (Household)</label>
                                    <select class="form-select form-select-lg" style="@ThemeInputStyle" 
                                            value="@request.ClientId" 
                                            @onchange="OnClientChanged">
                                        <option value="">-- Select Client --</option>
                                        @foreach (var c in clients) { <option value="@c.Id">@c.Name</option> }
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Individual Member (Optional)</label>
                                    <InputSelect @bind-Value="request.FamilyMemberId" class="form-select form-select-lg" style="@ThemeInputStyle" disabled="@(!members.Any())">
                                        <option value="">Entire Household</option>
                                        @foreach (var m in members) { <option value="@m.Id">@m.Name (@m.Relationship)</option> }
                                    </InputSelect>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Program</label>
                                    <InputSelect @bind-Value="request.ProgramId" class="form-select" style="@ThemeInputStyle">
                                        <option value="">-- Select Program --</option>
                                        @foreach (var p in programs) { <option value="@p.Id">@p.Name</option> }
                                    </InputSelect>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Fund Source</label>
                                    <InputSelect @bind-Value="request.FundId" class="form-select" style="@ThemeInputStyle">
                                        <option value="">-- Select Fund --</option>
                                        @foreach (var f in funds) { <option value="@f.Id">@f.Name ($@f.AvailableAmount.ToString("N0"))</option> }
                                    </InputSelect>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Amount</label>
                                    <div class="input-group">
                                        <span class="input-group-text fw-bold" 
                                              style="background-color: var(--growit-bg-primary); border-color: var(--growit-border); color: var(--growit-green);">$</span>
                                        <InputNumber @bind-Value="request.Amount" class="form-control fw-bold" placeholder="0.00" style="@ThemeInputStyle" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Payee</label>
                                    <InputText @bind-Value="request.PayeeName" class="form-control" placeholder="e.g. Entergy" style="@ThemeInputStyle" />
                                </div>

                                <div class="col-12">
                                    <label class="form-label small fw-bold text-uppercase" style="color: var(--growit-text-secondary);">Notes</label>
                                    <InputTextArea @bind-Value="request.Reason" class="form-control" rows="2" style="@ThemeInputStyle" />
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-2 mt-4 pt-3" style="border-top: 1px solid var(--growit-border);">
                                <button type="button" class="btn btn-outline-secondary px-4" 
                                        style="color: var(--growit-text-primary); border-color: var(--growit-border);" 
                                        @onclick="Close">Cancel</button>
                                <button type="submit" class="btn px-4 shadow-sm fw-bold text-white" 
                                        style="background-color: var(--growit-green); border: none;">
                                    <span class="oi oi-check me-2"></span>Plant Seed
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public EventCallback OnSeedPlanted { get; set; }

    private CreateInvestmentRequest request = new();
    private List<ClientDto> clients = new();
    private List<FundDto> funds = new();
    private List<ProgramDto> programs = new();
    private List<FamilyMemberDto> members = new();
    private bool isLoading = true;

    private string ThemeInputStyle => "background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border: 1px solid var(--growit-border);";

    protected override async Task OnParametersSetAsync()
    {
        if (Show && !clients.Any())
        {
            isLoading = true;
            try 
            {
                var clientsTask = Http.GetFromJsonAsync<List<ClientDto>>("api/clients");
                var fundsTask = Http.GetFromJsonAsync<List<FundDto>>("api/financials/funds");
                var programsTask = Http.GetFromJsonAsync<List<ProgramDto>>("api/financials/programs");
                
                await Task.WhenAll(clientsTask, fundsTask, programsTask);
                
                clients = await clientsTask ?? new();
                funds = await fundsTask ?? new();
                programs = await programsTask ?? new();
            }
            finally { isLoading = false; }
        }
    }

    private async Task OnClientChanged(ChangeEventArgs e)
    {
        var clientIdRaw = e.Value?.ToString();
        if (Guid.TryParse(clientIdRaw, out var clientId))
        {
            request.ClientId = clientId;
            request.FamilyMemberId = null; // Clear individual if family changes
            
            // Fetch client detail to get household members
            var detail = await Http.GetFromJsonAsync<ClientDetailDto>($"api/clients/{clientId}");
            members = detail?.HouseholdMembers ?? new();
        }
        else
        {
            request.ClientId = Guid.Empty;
            request.FamilyMemberId = null;
            members.Clear();
        }
    }

    private async Task HandleValidSubmit()
    {
        var response = await Http.PostAsJsonAsync("api/investments", request);
        if (response.IsSuccessStatusCode)
        {
            await Close();
            await OnSeedPlanted.InvokeAsync();
        }
    }

    private async Task Close()
    {
        Show = false;
        request = new();
        members.Clear();
        await ShowChanged.InvokeAsync(false);
    }

    // Temporary internal DTO to fix build if not in Shared
    public class ProgramDto { public Guid Id { get; set; } public string Name { get; set; } = ""; }
}