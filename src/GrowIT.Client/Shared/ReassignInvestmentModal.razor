@using GrowIT.Shared.DTOs
@inject HttpClient Http

@if (Show)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.7); backdrop-filter: blur(4px); z-index: 1200;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="background-color: var(--growit-bg-card); color: var(--growit-text-primary);">
                <div class="modal-header border-bottom" style="border-color: var(--growit-border);">
                    <h5 class="modal-title fw-bold">Reassign Investment</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">New Beneficiary</label>
                        <select class="form-select" @bind="newMemberId" style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border: 1px solid var(--growit-border);">
                            <option value="">Entire Household</option>
                            @foreach (var m in Members)
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Reason for Reassignment</label>
                        <textarea class="form-control" @bind="reason" rows="2" style="background-color: var(--growit-bg-primary); color: var(--growit-text-primary); border: 1px solid var(--growit-border);"></textarea>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button class="btn btn-outline-secondary" @onclick="Close">Cancel</button>
                        <button class="btn btn-primary fw-bold" @onclick="SubmitReassign" disabled="@(string.IsNullOrEmpty(reason))">Confirm Move</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Show { get; set; }
    [Parameter] public EventCallback<bool> ShowChanged { get; set; }
    [Parameter] public Guid InvestmentId { get; set; }
    [Parameter] public List<FamilyMemberDto> Members { get; set; } = new();
    [Parameter] public EventCallback OnChanged { get; set; }

    private Guid? newMemberId;
    private string reason = "";

    private async Task SubmitReassign()
    {
        var response = await Http.PatchAsJsonAsync($"api/investments/{InvestmentId}/reassign", new { NewFamilyMemberId = newMemberId, ReassignReason = reason });
        if (response.IsSuccessStatusCode)
        {
            await OnChanged.InvokeAsync();
            await Close();
        }
    }

    private async Task Close() => await ShowChanged.InvokeAsync(false);
}